generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId 
  email String  @unique
  name  String?
  image String?
  role  String? @default("user")
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId 
  email     String   @unique
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())
}
